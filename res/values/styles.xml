<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>
	
    <style name="text_style">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/bg1</item>
    </style>
    
    <style name="text_style1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue1</item>
        <item name="android:background">@color/bg2</item>
    </style>
    
    <style name="text_style2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:background">@color/bg1</item>
    </style>
    
    <style name="text_style3">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue3</item>
        <item name="android:background">@color/bg2</item>
    </style>
    
    <style name="btn_style">
    </style>
    
    <style name="mix_progress_dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
	    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	    <item name="android:windowBackground">@color/bg_no_color</item>
	    <item name="android:windowNoTitle">true</item>
	</style>
	
</resources>
