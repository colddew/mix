<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_items"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip">
    
    <CheckBox 
        android:id="@+id/list_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <ImageView 
        android:contentDescription="@string/list_item_image"
        android:id="@+id/list_item_image"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_toRightOf="@id/list_item_select"/>
    
    <TextView android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/list_item_title"
        android:layout_toRightOf="@id/list_item_image"/>
	
    <TextView android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text"
        android:layout_toRightOf="@id/list_item_image"
        android:layout_below="@id/list_item_title"/>
    
    <Button
        android:id="@+id/list_item_desc"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_title"
        android:background="@drawable/btn_selector_change"
        android:textColor="@color/bg3"
        android:layout_centerInParent="true"/>

</RelativeLayout>